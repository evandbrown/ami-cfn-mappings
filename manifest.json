{
  "name" : "AMI Mappings Generator",
  "version" : "1.1",
  "manifest_version": 2,
  "description": "Generate an AMI Mappings section for a CloudFormation template using the AMIs dropdown on an http://aws.amazon.com/amis page.",
	"permissions" : ["https://aws.amazon.com/amis/*", "http://aws.amazon.com/amis/*"],
  "background" : {
    "scripts": ["background.js"]
  },
  "page_action" :
  {
    "default_icon" : "ami.png",
    "default_title" : "Convert AMIs on this page to a CloudFormation Mappings section",
		"default_popup" : "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "https://aws.amazon.com/amis/*",
        "http://aws.amazon.com/amis/*"
      ],
      "js" : ["jquery.min.js", "contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
	"icons" : {
    "48" : "ami.png",
    "128" : "ami.png"
  }
}